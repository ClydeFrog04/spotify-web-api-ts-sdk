{
  "exclude": [
    "./src/**/*.test.ts",
    "./example/**/*.ts",
    "./vite.config.ts",
    "./vitest.config.ts",
    "./src/test/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true
  }
}
